%h1= @album.title

%hr

%div{style: "display: none"}
  = form_for Picture.new do |f|
    = f.hidden_field :album_id, value: @album.id
    = f.file_field :image#
    = f.submit "Upload"

%div{style: "min-height: 600px;"}
  - @album.pictures.each do |p|
    = link_to p.image.url do
      = p.id
      = image_tag p.image.thumb
